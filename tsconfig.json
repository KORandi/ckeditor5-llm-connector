{
	"compilerOptions": {
		"rootDir": ".", // Set to the root of the project
		"outDir": "./dist", // Output compiled files to ./dist
		"types": [],
		"lib": ["ES2020", "DOM", "DOM.Iterable", "ES2020.String"],
		"noImplicitAny": false,
		"strict": false,
		"target": "es2020",
		"sourceMap": true,
		"allowJs": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"skipLibCheck": true,
		"typeRoots": ["typings", "node_modules/@types"],
		"resolveJsonModule": true,
		"declaration": true
	},
	"include": ["./sample", "./src", "./typings"],
	"exclude": ["node_modules", "./dist"]
}
